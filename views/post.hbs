      <button class="navbar-toggler navbar-toggler-right" type="button" data-toggle="collapse" data-target="#navbarResponsive" aria-controls="navbarResponsive" aria-expanded="false" aria-label="Toggle navigation">
        Menu
        <i class="fas fa-bars"></i>
      </button>
      <div class="collapse navbar-collapse" id="navbarResponsive">
        <ul class="navbar-nav ml-auto">
          <li class="nav-item">
            <a class="nav-link" href="/">Home</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/about">About</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/login">login</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/dashboard">dashboard</a>
          </li>
          <li class="nav-item">
            <a class="nav-link" href="/contact">Contact</a>
          </li>
              </li>
    <li class="nav-item">
      <a class="nav-link" href="#">{{user}}</a>
    </li>
        </ul>
      </div>
    </div>
    
  </nav>


  <!-- Page Header -->
  <header class="masthead" style="background-image: url('../img/post-bg.jpg')">
    <div class="overlay"></div>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <div class="post-heading">
            <h1>{{post.title}}</h1>
            <h2>{{post.subtitle}}</h2>
            <span class="meta">Posted by
              <a href="/about">Alireza Rahimi</a>
              on {{post.created_at}}  <i class="far fa-comment"></i> {{countcomment}}</span>
          </div>
        </div>
      </div>
    </div>
  </header>

  <!-- Post Content -->
  <article>
    <div class="container">
      <div class="row">
        <div class="col-lg-8 col-md-10 mx-auto">
          <p> {{post.content}}</p>
          <a target="_blank" href="{{post.image}} "><button type="button" class="btn btn-primary">download</button></a>
        </div>
      </div>
    </div>
  </article>

<hr>
    <div class="container">
      <div class="row">
<div class="col-lg-8 col-md-6 mx-auto">
<details>
  <summary>Post Comment</summary>
<header>
        <center><h1>Comment </h1></center>
    </header>
    <main>
        <form action="/post/:id" method="post" id="post_form" role="form" aria-label="post comment">
            <label id="nameLabel" for="name">Name:</label>
            <br>
            <input type="text" id="name" maxlength="17" value ="{{name}}" readonly>
            <br>
            <label id="commentLabel" for="comment">Comment:</label>
            <br>
            <textarea id="comment" maxlength="3000"name="content" required></textarea>
            <br>
            <input type="submit" id="submit" value="Post">
        </form>
</details>
</div>
</div>
</div>
  <hr>
  {{#if com}}
      <div class="container">
      <div class="row">
  <div class="col-lg-8 col-md-10 mx-auto">
  <div id="global"> 
    <div class="messages">
      {{#each com}}          
      <div class="message">
  
      <p><strong>{{this.name}} {{this.last}}, <em>email: {{this.email}} posted: {{this.created_at}}</em></strong>
        {{this.content}}</p>
    </div>
</div>
{{/each}}
</div>
</div>
{{else}}
<div class="container">
    <div class="row">
       <div class="col-lg-8 col-md-10 mx-auto">
  <p>Comment : 0</p>
  </div>
  </div>
  </div>
{{/if}}
    </main>
    </div>
    </div>
  <br>
<!-- Footer -->
{{>footer}}
  <!-- Bootstrap core JavaScript -->
  <script src="vendor/jquery/jquery.min.js"></script>
  <script src="vendor/bootstrap/js/bootstrap.bundle.min.js"></script>

